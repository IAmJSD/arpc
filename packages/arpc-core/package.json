{
    "name": "@arpc-packages/core",
    "version": "1.0.2",
    "module": "dist/index.mjs",
    "main": "dist/index.js",
    "types": "src/index.ts",
    "exports": {
        ".": {
            "browser": "./dist/index.mjs",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js",
            "types": "./src/index.ts"
        }
    },
    "dependencies": {
